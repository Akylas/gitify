{
  "name": "gitify",
  "version": "1.1.0",
  "description": "GitHub Notifications on your menu bar.",
  "main": "main.js",
  "scripts": {
    "build-js": "mkdir -p dist/js/ && browserify -t babelify --ignore-missing --no-builtins --no-commondir --insert-global-vars=\"global\" --no-browser-field --exclude electron src/js/app.js | uglifyjs > dist/js/app.js",
    "build": "npm run build-js && gulp build",
    "watch-js": "watchify -t babelify --ignore-missing --no-builtins --no-commondir --insert-global-vars=\"global\" --no-browser-field --exclude electron src/js/app.js -o dist/js/app.js -v",
    "watch": "gulp build && npm run watch-js & gulp watch",
    "package": "electron-packager . Gitify --overwrite --platform=darwin --arch=x64 --version=1.4.0 --asar=true --icon=images/app-icon.icns --prune --ignore='src' --ignore='coverage'",
    "codesign": "bash scripts/codesign.bash",
    "dist": "npm run build && npm run package && npm run codesign",
    "lint-js": "eslint 'src/js/' 'src/js/app.js' 'main.js'",
    "lint-sass": "sass-lint -c .sass-lint.yml -v -q",
    "jest": "jest",
    "test": "npm run lint-js && npm run lint-sass && npm run jest -- --coverage",
    "start": "electron . â€“enable-logging"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manosim/gitify.git"
  },
  "keywords": [
    "gitify",
    "github",
    "notifier",
    "notifications",
    "electron",
    "atom",
    "shell",
    "app",
    "tray"
  ],
  "author": "Emmanouil Konstantinidis",
  "contributors": [
    {
      "name": "Emmanouil Konstantinidis",
      "url": "https://githib.com/manosim"
    },
    {
      "name": "Jake 'Sid' Smith",
      "url": "https://githib.com/JakeSidSmith"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manosim/gitify/issues"
  },
  "homepage": "http://www.gitify.io/",
  "jest": {
    "coverageThreshold": {
      "global": {
        "lines": 95
      }
    }
  },
  "dependencies": {
    "auto-launch": "=5.0.1",
    "axios": "=0.16.1",
    "bootstrap": "=4.0.0-alpha.5",
    "electron-gh-releases": "=2.0.4",
    "font-awesome": "=4.7.0",
    "icheck": "=1.0.2",
    "immutable": "=3.8.1",
    "malarkey": "=1.3.3",
    "moment": "=2.18.1",
    "nprogress": "=0.2.0",
    "octicons": "=4.4.0",
    "react": "=15.5.4",
    "react-addons-css-transition-group": "=15.5.2",
    "react-addons-shallow-compare": "=15.5.2",
    "react-addons-test-utils": "=15.5.1",
    "react-dom": "=15.5.4",
    "react-emojione": "=2.0.0",
    "react-icheck": "=0.3.8",
    "react-modal": "=1.7.6",
    "react-redux": "=5.0.4",
    "react-router": "=4.1.1",
    "react-router-dom": "=4.1.1",
    "redux": "=3.6.0",
    "redux-storage": "=4.1.2",
    "redux-storage-decorator-filter": "=1.1.8",
    "redux-storage-engine-localstorage": "=1.1.4",
    "redux-storage-merger-immutablejs": "=1.0.5",
    "redux-thunk": "=2.2.0",
    "underscore": "=1.8.3"
  },
  "devDependencies": {
    "babel-eslint": "=7.2.2",
    "babel-jest": "=19.0.0",
    "babel-preset-es2015": "=6.24.1",
    "babel-preset-react": "=6.24.1",
    "babel-preset-stage-0": "=6.24.1",
    "babelify": "=7.3.0",
    "browserify": "=14.3.0",
    "electron": "=1.6.2",
    "electron-packager": "=8.6.0",
    "enzyme": "=2.8.2",
    "eslint": "=3.19.0",
    "eslint-plugin-react": "=6.10.3",
    "gulp": "=3.9.1",
    "gulp-sass": "=3.1.0",
    "jest": "=19.0.2",
    "nock": "=9.0.13",
    "react-test-renderer": "=15.5.4",
    "redux-logger": "=3.0.1",
    "redux-mock-store": "=1.2.3",
    "sass-lint": "=1.10.2 -v",
    "uglify-js": "=2.8.22",
    "watchify": "=3.9.0"
  }
}
