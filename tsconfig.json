{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
